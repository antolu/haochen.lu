# Development Dockerfile for backend
# hadolint ignore=DL3008,DL3013
# syntax=docker/dockerfile:1.4
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies, including libvips and AVIF support for pyvips
# hadolint ignore=DL3008
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    ca-certificates \
    gcc \
    g++ \
    libpq-dev \
    curl \
    libvips-dev \
    libheif-dev \
    libde265-dev \
    libx265-dev \
    libaom-dev \
    libdav1d-dev \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

## Install dev tools first (stable cache)
RUN pip install --no-cache-dir watchfiles==0.24.0

# Copy project metadata next for dependency layer caching
COPY pyproject.toml ./

# Install Python dependencies using cacheable layer
RUN pip install --no-cache-dir .

# Copy source code after deps cached
COPY . ./

# Create uploads and compressed directories
RUN mkdir -p /app/uploads /app/compressed

# Expose port
EXPOSE 8000

# Default command (can be overridden)
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
