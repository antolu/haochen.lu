# Development Dockerfile for backend
# hadolint ignore=DL3008,DL3013
# syntax=docker/dockerfile:1.4
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies, including libvips and AVIF support for pyvips
# hadolint ignore=DL3008
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    ca-certificates \
    gcc \
    g++ \
    libpq-dev \
    curl \
    libvips-dev \
    libheif-dev \
    libde265-dev \
    libx265-dev \
    libaom-dev \
    libdav1d-dev \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

## Install dev tools first (stable cache)
RUN pip install --no-cache-dir watchfiles==0.24.0

# Copy project metadata next for dependency layer caching
COPY pyproject.toml ./

# Install dependencies only (not the package itself) to avoid setuptools-scm issues
# hadolint ignore=DL3013,SC2046
RUN pip install --no-cache-dir "$(python -c "import tomllib; print(' '.join(tomllib.load(open('pyproject.toml', 'rb'))['project']['dependencies']))")"

# Copy source code after deps cached
COPY . ./

# Install the package itself with git context for setuptools-scm versioning
RUN --mount=type=bind,from=gitdir,src=.,target=/app/.git \
    pip install --no-cache-dir --no-deps .

# Create uploads and compressed directories
RUN mkdir -p /app/uploads /app/compressed

# Expose port
EXPOSE 8000

# Default command (can be overridden)
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
